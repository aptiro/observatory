{% include '_header.twig' %}
    <h1>
        {{ subdomain.title }}
    </h1>
    {% set relateditems = subdomain.related('items') %}
    {% if relateditems is not empty %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Country</th>
                    <th>Title</th>
                    <th>Link</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in relateditems %}
                <tr>
                    <td>{{ item.country }}</td>
                    <td>{{ item.title }}</td>
                    <td>{{ item.url }}</td>
                    <td>
                        <a href="{{ item.url }}" target="_blank">
                            View
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no items to display.</p>
    {% endif %}
{% include '_footer.twig' %}