<!doctype html>
<html lang="{{ htmllang() }}">
    {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
	<head>
		<meta charset="utf-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <title>{% if record.title is defined %}{{ record.title|striptags }} - {% endif %}{{ app.config.get('general/sitename') }}</title>

		<meta name="viewport" content="width=device-width, maximum-scale=1.0"/>

        {% if record and record.description|length > 0 %}
            <meta name="description" content="{{ record.description|striptags|slice(0, 160) }}">
            <meta name="keywords" content="{% for tag in record.taxonomy.tags %}{{ tag }}{% if not loop.last %}, {% endif %}{% endfor %}">
        {% endif %}

		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        
        <link rel="stylesheet" href="{{ paths.theme }}css/site.css"/>

		<!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	</head>

	<body>
	<div class="container">

        <div class="row">
            <div class="col-sm-12">
                <h1>
                    <a href="{{ paths.root }}">
                        <img src="/theme/default/img/MAPPING_logo.png" alt="{{ app.config.get('general/sitename') }}"> Policy Observatory
                        <sup>alpha</sup>
                    </a>
                </h1>
            </div>
        </div>
        <div class="row">


            <div class="col-sm-12">
                {{ menu('main', '_menu_sidebar.twig') }} 
                <header id="page-header" role="navigation">
                </header>               
            </div>

        </div>

        <div class="row content">
            {% if currentPath == '/' %}
                <div class="col-sm-8">
            {% else %}
                <div class="col-sm-12">            
            {% endif %}